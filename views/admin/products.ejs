<%- include("../includes/base.ejs")  %>
<link rel="stylesheet" href="/css/home/home.css">
</head>
<%- include("../includes/header.ejs")  %>

<main>  
    <% if (prods.length > 0) {%>
        <% for (let products of prods){ %>
        <div class="wrapper__product">
            <h1 class="Product__title"> <%= products.title %> </h1>
            <div class="wrapper__img">
                <img src="<%= products.img %>" alt=" <%= products.title %> " class="Product__img">
            </div>
            <h4 class="Product__Price"> <%= products.price %> </h4>
            <p class="Product__description"> <%= products.description %> </p>
        </div>
        <div>
            <a href="/admin/edit/<%= products.id  %>?edit=true">EDIT</a>
            <form action="/admin/delete" method="POST">
                <input type="hidden" value="<%= products.id  %>" name="productId">
                <button class="btn" type="submit"> delete </button>
            </form>
        </div>
        <% } %>
    <% }else{ %>
        <h1>NO Products</h1>
    <% } %>
</main>

<%- include("../includes/end.ejs")  %>
