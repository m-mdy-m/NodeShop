                        <label for="price">Price</label>
                        <input type="number" step=".01" class="priceInput inputs" name="price" id="price" placeholder="Price">
                </div>
                <div class="form__control">
                        <label for="description">description</label>
                        <textarea name="description" class="descriptionInput inputs"  rows="5"></textarea>
